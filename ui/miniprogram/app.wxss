/**app.wxss**/

/* 全局样式 */
page {
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  min-height: 100vh;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
}

/* 清新主题色彩变量 */
:root {
  --primary-color: #667eea;
  --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  --success-color: #67c23a;
  --warning-color: #e6a23c;
  --danger-color: #f56c6c;
  --info-color: #909399;
  --bg-gradient: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  --card-bg: rgba(255, 255, 255, 0.9);
  --text-primary: #303133;
  --text-regular: #606266;
  --text-secondary: #909399;
}

/* 容器样式 */
.container {
  padding: 32rpx;
}

/* 卡片样式 */
.fresh-card {
  background: var(--card-bg);
  border-radius: 32rpx;
  padding: 40rpx;
  margin: 20rpx 0;
  box-shadow: 0 16rpx 64rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(20rpx);
}

/* 按钮样式 */
.fresh-button {
  background: var(--primary-gradient);
  color: white;
  border: none;
  border-radius: 24rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 500;
  text-align: center;
  transition: all 0.3s ease;
}

.fresh-button::after {
  border: none;
}

.fresh-button.disabled {
  background: #f0f0f0;
  color: #ccc;
}

.fresh-button.secondary {
  background: #f8f9fa;
  color: #6c757d;
  border: 2rpx solid #e9ecef;
}

/* 输入框样式 */
.fresh-input {
  background: rgba(255, 255, 255, 0.8);
  border: 2rpx solid #e4e7ed;
  border-radius: 24rpx;
  padding: 24rpx 32rpx;
  font-size: 32rpx;
  width: 100%;
  box-sizing: border-box;
}

.fresh-input:focus {
  border-color: var(--primary-color);
  box-shadow: 0 0 0 8rpx rgba(102, 126, 234, 0.1);
}

/* 表单项样式 */
.form-item {
  margin-bottom: 32rpx;
}

.form-label {
  display: block;
  color: var(--text-regular);
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 16rpx;
}

/* 文本样式 */
.text-primary {
  color: var(--text-primary);
}

.text-regular {
  color: var(--text-regular);
}

.text-secondary {
  color: var(--text-secondary);
}

.text-success {
  color: var(--success-color);
}

.text-warning {
  color: var(--warning-color);
}

.text-danger {
  color: var(--danger-color);
}

/* 布局样式 */
.flex {
  display: flex;
}

.flex-column {
  flex-direction: column;
}

.flex-center {
  justify-content: center;
  align-items: center;
}

.flex-between {
  justify-content: space-between;
  align-items: center;
}

.flex-around {
  justify-content: space-around;
  align-items: center;
}

/* 间距样式 */
.mt-16 { margin-top: 16rpx; }
.mt-32 { margin-top: 32rpx; }
.mt-48 { margin-top: 48rpx; }
.mb-16 { margin-bottom: 16rpx; }
.mb-32 { margin-bottom: 32rpx; }
.mb-48 { margin-bottom: 48rpx; }
.ml-16 { margin-left: 16rpx; }
.mr-16 { margin-right: 16rpx; }

.pt-16 { padding-top: 16rpx; }
.pt-32 { padding-top: 32rpx; }
.pb-16 { padding-bottom: 16rpx; }
.pb-32 { padding-bottom: 32rpx; }
.pl-16 { padding-left: 16rpx; }
.pr-16 { padding-right: 16rpx; }

/* 圆角样式 */
.rounded-small { border-radius: 16rpx; }
.rounded-medium { border-radius: 24rpx; }
.rounded-large { border-radius: 32rpx; }

/* 阴影样式 */
.shadow-small {
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.shadow-medium {
  box-shadow: 0 16rpx 64rpx rgba(0, 0, 0, 0.1);
}

.shadow-large {
  box-shadow: 0 24rpx 96rpx rgba(0, 0, 0, 0.12);
}

/* 动画样式 */
.fade-in {
  animation: fadeIn 0.3s ease-in-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.slide-up {
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

/* 加载样式 */
.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 8rpx solid #f3f3f3;
  border-top: 8rpx solid var(--primary-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}