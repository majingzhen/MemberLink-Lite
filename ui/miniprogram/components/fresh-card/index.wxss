/* components/fresh-card/index.wxss */

.fresh-card {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20rpx);
  transition: all 0.3s ease;
  overflow: hidden;
}

/* 圆角大小 */
.fresh-card.small {
  border-radius: 16rpx;
}

.fresh-card.medium {
  border-radius: 24rpx;
}

.fresh-card.large {
  border-radius: 32rpx;
}

/* 阴影效果 */
.fresh-card.shadow {
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

/* 边框效果 */
.fresh-card.border {
  border: 2rpx solid rgba(102, 126, 234, 0.1);
}

/* 可点击效果 */
.fresh-card.clickable {
  cursor: pointer;
}

.fresh-card.clickable:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
}

/* 卡片类型 */
.fresh-card.default {
  background: rgba(255, 255, 255, 0.9);
}

.fresh-card.primary {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  border: 2rpx solid rgba(102, 126, 234, 0.2);
}

.fresh-card.success {
  background: linear-gradient(135deg, rgba(103, 194, 58, 0.1) 0%, rgba(76, 175, 80, 0.1) 100%);
  border: 2rpx solid rgba(103, 194, 58, 0.2);
}

.fresh-card.warning {
  background: linear-gradient(135deg, rgba(230, 162, 60, 0.1) 0%, rgba(255, 193, 7, 0.1) 100%);
  border: 2rpx solid rgba(230, 162, 60, 0.2);
}

.fresh-card.danger {
  background: linear-gradient(135deg, rgba(245, 108, 108, 0.1) 0%, rgba(244, 67, 54, 0.1) 100%);
  border: 2rpx solid rgba(245, 108, 108, 0.2);
}

/* 卡片头部 */
.card-header {
  padding: 32rpx 32rpx 0 32rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.05);
  margin-bottom: 24rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #303133;
  display: block;
  padding-bottom: 16rpx;
}

/* 卡片内容 */
.card-content {
  padding: 32rpx;
}

.fresh-card.card-header + .card-content {
  padding-top: 0;
}

/* 特殊样式变体 */
.fresh-card.glass {
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(40rpx);
  border: 2rpx solid rgba(255, 255, 255, 0.18);
}

.fresh-card.gradient {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.fresh-card.gradient .card-title {
  color: white;
}

/* 悬浮效果 */
.fresh-card.hover-lift:hover {
  transform: translateY(-8rpx);
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.15);
}

/* 响应式适配 */
@media (max-width: 375px) {
  .card-content {
    padding: 24rpx;
  }
  
  .card-header {
    padding: 24rpx 24rpx 0 24rpx;
  }
  
  .card-title {
    font-size: 28rpx;
  }
}