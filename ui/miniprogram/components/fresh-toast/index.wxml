<!-- components/fresh-toast/index.wxml -->
<view 
  wx:if="{{visible}}" 
  class="fresh-toast-overlay {{position}} {{customClass}}"
>
  <view 
    class="toast-container {{type}} fade-in"
    bindtap="onToastTap"
  >
    <!-- 图标 -->
    <view class="toast-icon">
      <text wx:if="{{type === 'success'}}">✓</text>
      <text wx:elif="{{type === 'error'}}">✕</text>
      <text wx:elif="{{type === 'warning'}}">⚠</text>
      <text wx:else>ℹ</text>
    </view>

    <!-- 文字 -->
    <text class="toast-text">{{text}}</text>
  </view>
</view>