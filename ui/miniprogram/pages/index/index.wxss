/* pages/index/index.wxss */

.container {
  min-height: 100vh;
  background: #ffffff;
  font-family: 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
}

/* 顶部栏 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 2rpx solid #e5e7eb;
  background: #ffffff;
}

.header-time {
  font-size: 28rpx;
  color: #6b7280;
}

.header-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
}

.header-actions {
  display: flex;
  align-items: center;
  gap: 32rpx;
}

.header-icon {
  font-size: 32rpx;
  color: #6b7280;
}

/* 主要内容区 */
.main-content {
  padding: 32rpx;
  padding-bottom: 48rpx;
}

.page-title {
  font-size: 48rpx;
  font-weight: 700;
  text-align: center;
  margin-bottom: 48rpx;
  color: #1f2937;
}

/* 用户信息卡片 */
.user-card {
  background: #eff6ff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 48rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.user-info-section {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 24rpx;
  object-fit: cover;
}

.user-details {
  flex: 1;
}

.user-greeting {
  font-size: 36rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 8rpx;
}

.user-subtitle {
  font-size: 28rpx;
  color: #6b7280;
}

.user-stats {
  display: flex;
  justify-content: space-around;
  text-align: center;
}

.stat-item {
  flex: 1;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.stat-value.balance {
  color: #2563eb;
}

.stat-value.points {
  color: #f97316;
}

.stat-label {
  font-size: 28rpx;
  color: #6b7280;
}

/* 功能菜单 */
.menu-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 32rpx;
  margin-bottom: 48rpx;
}

.menu-item {
  background: #ffffff;
  padding: 32rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
  gap: 24rpx;
  transition: all 0.2s ease;
}

.menu-item:active {
  transform: scale(0.98);
  background: #f9fafb;
}

.menu-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.menu-icon.blue {
  background: #dbeafe;
  color: #2563eb;
}

.menu-icon.orange {
  background: #fed7aa;
  color: #f97316;
}

.menu-icon.gray {
  background: #f3f4f6;
  color: #6b7280;
}

.menu-icon.green {
  background: #dcfce7;
  color: #16a34a;
}

.icon-text {
  font-size: 32rpx;
}

.menu-content {
  flex: 1;
}

.menu-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 8rpx;
}

.menu-desc {
  font-size: 24rpx;
  color: #6b7280;
}

/* 登录区域 */
.login-section {
  text-align: center;
  margin-top: 48rpx;
}

.login-prompt {
  font-size: 32rpx;
  color: #6b7280;
  margin-bottom: 40rpx;
}

.login-buttons {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  align-items: center;
}

.login-btn {
  width: 400rpx;
  height: 88rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.login-btn::after {
  border: none;
}

.login-btn.primary {
  background: #2563eb;
  color: #ffffff;
}

.login-btn.primary:active {
  background: #1d4ed8;
  transform: scale(0.98);
}

.login-btn.wechat {
  background: #07c160;
  color: #ffffff;
}

.login-btn.wechat:active {
  background: #059669;
  transform: scale(0.98);
}

/* 响应式适配 */
@media (max-width: 375px) {
  .menu-grid {
    grid-template-columns: 1fr;
  }
  
  .page-title {
    font-size: 40rpx;
  }
  
  .user-avatar {
    width: 64rpx;
    height: 64rpx;
    border-radius: 32rpx;
  }
  
  .login-btn {
    width: 320rpx;
  }
}