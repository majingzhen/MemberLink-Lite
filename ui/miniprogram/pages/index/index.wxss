/* pages/index/index.wxss */

.container {
  padding: 32rpx;
  min-height: 100vh;
}

/* 欢迎区域 */
.welcome-section {
  margin-bottom: 48rpx;
}

.welcome-card {
  text-align: center;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
}

.welcome-title {
  font-size: 48rpx;
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

.welcome-subtitle {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 32rpx;
}

/* 用户欢迎信息 */
.user-welcome {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 32rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 24rpx;
  border: 4rpx solid rgba(102, 126, 234, 0.2);
}

.user-info {
  text-align: left;
}

.user-nickname {
  font-size: 36rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.user-desc {
  font-size: 28rpx;
  color: var(--text-secondary);
}

/* 登录提示 */
.login-prompt {
  margin-top: 32rpx;
}

.prompt-text {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 32rpx;
}

.login-btn {
  width: 400rpx;
  margin: 0 auto;
}

.wechat-btn {
  width: 400rpx;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-icon {
  margin-right: 16rpx;
  font-size: 32rpx;
}

/* 功能菜单区域 */
.menu-section {
  margin-bottom: 48rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 24rpx;
  padding-left: 16rpx;
  border-left: 8rpx solid var(--primary-color);
}

.menu-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.menu-item {
  text-align: center;
  padding: 32rpx 24rpx;
  transition: all 0.3s ease;
}

.menu-item:active {
  transform: scale(0.95);
}

.menu-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
}

.menu-title {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.menu-desc {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 快捷操作区域 */
.quick-actions {
  margin-bottom: 48rpx;
}

.actions-card {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 32rpx 24rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 0.3s ease;
}

.action-item:active {
  transform: scale(0.9);
}

.action-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.action-text {
  font-size: 24rpx;
  color: var(--text-regular);
}

/* 调试信息 */
.debug-info {
  margin-top: 48rpx;
  padding: 24rpx;
  background: rgba(0, 0, 0, 0.05);
  border-radius: 16rpx;
}

.debug-title {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-regular);
  margin-bottom: 16rpx;
}

.debug-content {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.debug-content text {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 响应式适配 */
@media (max-width: 375px) {
  .menu-grid {
    grid-template-columns: 1fr;
  }
  
  .welcome-title {
    font-size: 40rpx;
  }
  
  .user-avatar {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50rpx;
  }
}