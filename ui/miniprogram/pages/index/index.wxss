/* pages/index/index.wxss */

.container {
  padding: 40rpx;
  min-height: 100vh;
  background: #ffffff;
}

/* 欢迎区域 */
.welcome-section {
  margin-bottom: 48rpx;
}

.welcome-content {
  text-align: center;
}

.welcome-header {
  margin-bottom: 40rpx;
}

.welcome-title {
  font-size: 48rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

.welcome-subtitle {
  font-size: 32rpx;
  color: var(--text-secondary);
}

/* 用户欢迎信息 */
.user-welcome {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 32rpx;
}

.user-avatar-container {
  position: relative;
  margin-right: 32rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
}

.user-info {
  text-align: left;
}

.user-nickname {
  font-size: 40rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 12rpx;
}

.user-desc {
  font-size: 32rpx;
  color: var(--text-secondary);
  margin-bottom: 24rpx;
}

.user-stats {
  display: flex;
  align-items: center;
  gap: 48rpx;
}

.stat-item {
  text-align: center;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 28rpx;
  color: var(--text-secondary);
}

/* 登录提示 */
.login-prompt {
  margin-top: 32rpx;
}

.prompt-text {
  font-size: 32rpx;
  color: var(--text-secondary);
  margin-bottom: 40rpx;
}

.login-buttons {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
}

.login-btn {
  width: 400rpx;
  background: var(--primary-color);
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 32rpx;
  font-size: 36rpx;
  font-weight: 500;
  min-height: 88rpx;
  line-height: 24rpx;
  transition: all 0.3s ease;
}

.login-btn::after {
  border: none;
}

.login-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.wechat-btn {
  width: 400rpx;
  background: #07c160;
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 32rpx;
  font-size: 36rpx;
  font-weight: 500;
  min-height: 88rpx;
  line-height: 24rpx;
  transition: all 0.3s ease;
}

.wechat-btn::after {
  border: none;
}

.wechat-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

/* 功能菜单区域 */
.menu-section {
  margin-bottom: 48rpx;
}

.section-header {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 40rpx;
  font-weight: 600;
  color: var(--text-primary);
  padding-left: 16rpx;
  border-left: 8rpx solid var(--primary-color);
}

.menu-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 32rpx;
}

.menu-item {
  text-align: center;
  padding: 40rpx 32rpx;
  transition: all 0.3s ease;
}

.menu-item:active {
  transform: scale(0.98);
}

.menu-icon {
  font-size: 64rpx;
  margin-bottom: 24rpx;
}

.menu-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 12rpx;
}

.menu-desc {
  font-size: 28rpx;
  color: var(--text-secondary);
}

/* 快捷操作区域 */
.quick-actions {
  margin-bottom: 48rpx;
}

.actions-content {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 40rpx 32rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 0.3s ease;
  padding: 24rpx;
  border-radius: 16rpx;
}

.action-item:active {
  transform: scale(0.95);
  background: #f8f9fa;
}

.action-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.action-text {
  font-size: 28rpx;
  color: var(--text-regular);
  font-weight: 500;
}

/* 调试信息 */
.debug-info {
  margin-top: 48rpx;
  padding: 32rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
}

.debug-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 24rpx;
}

.debug-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.debug-content text {
  font-size: 28rpx;
  color: var(--text-secondary);
}

/* 响应式适配 */
@media (max-width: 375px) {
  .menu-grid {
    grid-template-columns: 1fr;
  }
  
  .welcome-title {
    font-size: 40rpx;
  }
  
  .user-avatar {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50rpx;
  }
  
  .login-btn,
  .wechat-btn {
    width: 320rpx;
  }
}