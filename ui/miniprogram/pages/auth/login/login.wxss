/* pages/auth/login/login.wxss */

.login-container {
  min-height: 100vh;
  padding: 64rpx 40rpx 40rpx;
  background: #ffffff;
}

/* 头部区域 */
.login-header {
  text-align: center;
  margin-bottom: 64rpx;
}

.logo-section {
  color: var(--text-primary);
}

.logo {
  font-size: 120rpx;
  margin-bottom: 32rpx;
}

.title {
  font-size: 48rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 32rpx;
  color: var(--text-secondary);
}

/* 登录方式切换 */
.login-tabs {
  display: flex;
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 8rpx;
  margin-bottom: 48rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  color: var(--text-secondary);
  transition: all 0.3s ease;
  font-weight: 500;
}

.tab-item.active {
  background: var(--primary-color);
  color: white;
  font-weight: 600;
}

.tab-item:active {
  transform: scale(0.95);
}

/* 登录表单 */
.login-form {
  margin-bottom: 48rpx;
}

.form-item {
  margin-bottom: 40rpx;
}

.input-wrapper {
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border: 2rpx solid transparent;
  border-radius: 16rpx;
  padding: 32rpx 40rpx;
  transition: all 0.3s ease;
  min-height: 88rpx;
}

.input-wrapper:focus-within {
  border-color: var(--primary-color);
  background: #ffffff;
  box-shadow: 0 0 0 8rpx rgba(44, 62, 80, 0.1);
}

.input-wrapper.error {
  border-color: var(--danger-color);
  background: #ffffff;
  box-shadow: 0 0 0 8rpx rgba(231, 76, 60, 0.1);
}

.input-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
  color: var(--text-secondary);
}

.form-input {
  flex: 1;
  font-size: 36rpx;
  color: var(--text-primary);
  min-height: 24rpx;
  line-height: 24rpx;
  background: transparent;
}

.input-action {
  font-size: 36rpx;
  color: var(--text-secondary);
  padding: 8rpx;
  transition: all 0.3s ease;
}

.input-action:active {
  transform: scale(0.9);
}

.error-text {
  color: var(--danger-color);
  font-size: 28rpx;
  margin-top: 16rpx;
  margin-left: 20rpx;
}

.forgot-password {
  text-align: right;
  margin-bottom: 40rpx;
}

.forgot-password text {
  color: var(--primary-color);
  font-size: 28rpx;
  transition: all 0.3s ease;
}

.forgot-password text:active {
  opacity: 0.7;
}

/* 登录按钮 */
.login-button {
  width: 100%;
  background: var(--primary-color);
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 32rpx;
  font-size: 36rpx;
  font-weight: 500;
  min-height: 88rpx;
  line-height: 24rpx;
  transition: all 0.3s ease;
}

.login-button::after {
  border: none;
}

.login-button:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.login-button.loading {
  background: #bdc3c7;
}

/* 微信登录 */
.wechat-login {
  margin-bottom: 48rpx;
}

.wechat-content {
  text-align: center;
  padding: 40rpx 0;
}

.wechat-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
}

.wechat-title {
  font-size: 40rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 20rpx;
}

.wechat-desc {
  font-size: 32rpx;
  color: var(--text-secondary);
  margin-bottom: 48rpx;
}

/* 微信登录按钮 */
.wechat-button {
  width: 100%;
  background: #07c160;
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 32rpx;
  font-size: 36rpx;
  font-weight: 500;
  min-height: 88rpx;
  line-height: 24rpx;
  transition: all 0.3s ease;
}

.wechat-button::after {
  border: none;
}

.wechat-button:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.wechat-button.loading {
  background: #bdc3c7;
}

/* 注册提示 */
.register-tip {
  text-align: center;
  margin-bottom: 40rpx;
  color: var(--text-secondary);
  font-size: 32rpx;
}

.register-link {
  color: var(--primary-color) !important;
  font-weight: 600;
  margin-left: 8rpx;
  transition: all 0.3s ease;
}

.register-link:active {
  opacity: 0.7;
}

/* 协议提示 */
.agreement-tip {
  text-align: center;
  color: var(--text-light);
  font-size: 28rpx;
  line-height: 1.5;
}

.agreement-link {
  color: var(--text-secondary) !important;
  text-decoration: underline;
  transition: all 0.3s ease;
}

.agreement-link:active {
  opacity: 0.7;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .login-container {
    padding: 48rpx 32rpx 32rpx;
  }
  
  .logo {
    font-size: 100rpx;
  }
  
  .title {
    font-size: 40rpx;
  }
  
  .input-wrapper {
    padding: 28rpx 36rpx;
    min-height: 80rpx;
  }
  
  .form-input {
    font-size: 32rpx;
  }
}