/* pages/auth/login/login.wxss */

.login-container {
  min-height: 100vh;
  padding: 64rpx 32rpx 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

/* 头部区域 */
.login-header {
  text-align: center;
  margin-bottom: 64rpx;
}

.logo-section {
  color: white;
}

.logo {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  opacity: 0.8;
}

/* 登录方式切换 */
.login-tabs {
  display: flex;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 32rpx;
  padding: 8rpx;
  margin-bottom: 48rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  border-radius: 24rpx;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
  transition: all 0.3s ease;
}

.tab-item.active {
  background: white;
  color: #667eea;
  font-weight: 500;
}

/* 登录表单 */
.login-form {
  margin-bottom: 48rpx;
}

.form-item {
  margin-bottom: 32rpx;
}

.input-wrapper {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.9);
  border: 2rpx solid transparent;
  border-radius: 24rpx;
  padding: 24rpx 32rpx;
  transition: all 0.3s ease;
}

.input-wrapper:focus-within {
  border-color: #667eea;
  box-shadow: 0 0 0 8rpx rgba(102, 126, 234, 0.1);
}

.input-wrapper.error {
  border-color: #f56c6c;
}

.input-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  color: #909399;
}

.form-input {
  flex: 1;
  font-size: 32rpx;
  color: #303133;
}

.input-action {
  font-size: 32rpx;
  color: #909399;
  padding: 8rpx;
}

.error-text {
  color: #f56c6c;
  font-size: 24rpx;
  margin-top: 12rpx;
  margin-left: 16rpx;
}

.forgot-password {
  text-align: right;
  margin-bottom: 32rpx;
}

.forgot-password text {
  color: #667eea;
  font-size: 26rpx;
}

/* 微信登录 */
.wechat-login {
  margin-bottom: 48rpx;
}

.wechat-content {
  text-align: center;
  padding: 32rpx 0;
}

.wechat-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.wechat-title {
  font-size: 36rpx;
  font-weight: 500;
  color: #303133;
  margin-bottom: 16rpx;
}

.wechat-desc {
  font-size: 28rpx;
  color: #606266;
  margin-bottom: 48rpx;
}

/* 注册提示 */
.register-tip {
  text-align: center;
  margin-bottom: 32rpx;
  color: rgba(255, 255, 255, 0.8);
  font-size: 28rpx;
}

.register-link {
  color: white !important;
  font-weight: 500;
  margin-left: 8rpx;
}

/* 协议提示 */
.agreement-tip {
  text-align: center;
  color: rgba(255, 255, 255, 0.6);
  font-size: 24rpx;
  line-height: 1.5;
}

.agreement-link {
  color: rgba(255, 255, 255, 0.8) !important;
  text-decoration: underline;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .login-container {
    padding: 48rpx 24rpx 24rpx;
  }
  
  .logo {
    font-size: 100rpx;
  }
  
  .title {
    font-size: 40rpx;
  }
  
  .input-wrapper {
    padding: 20rpx 24rpx;
  }
  
  .form-input {
    font-size: 30rpx;
  }
}