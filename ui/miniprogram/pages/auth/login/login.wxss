/* pages/auth/login/login.wxss */

.container {
  min-height: 100vh;
  background: #f3f4f6;
  font-family: 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
  display: flex;
  flex-direction: column;
}

/* 主要内容区 */
.main-content {
  flex: 1;
  padding: 48rpx 32rpx;
}

.page-title {
  font-size: 48rpx;
  font-weight: 700;
  text-align: center;
  margin-bottom: 48rpx;
  color: #1f2937;
}

/* 登录方式切换 */
.login-tabs {
  display: flex;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 8rpx;
  margin-bottom: 48rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  color: #6b7280;
  transition: all 0.2s ease;
  font-weight: 500;
}

.tab-item.active {
  background: #2563eb;
  color: white;
  font-weight: 600;
}

.tab-item:active {
  transform: scale(0.95);
}

/* 登录表单 */
.login-form {
  margin-bottom: 48rpx;
}

.form-item {
  margin-bottom: 32rpx;
}

.input-wrapper {
  display: flex;
  align-items: center;
  background: #ffffff;
  border: 2rpx solid #e5e7eb;
  border-radius: 16rpx;
  padding: 32rpx 40rpx;
  transition: all 0.2s ease;
  min-height: 88rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.input-wrapper:focus-within {
  border-color: #2563eb;
  box-shadow: 0 0 0 8rpx rgba(37, 99, 235, 0.1);
}

.input-wrapper.error {
  border-color: #dc2626;
  box-shadow: 0 0 0 8rpx rgba(220, 38, 38, 0.1);
}

.input-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
  color: #6b7280;
}

.form-input {
  flex: 1;
  font-size: 32rpx;
  color: #1f2937;
  min-height: 24rpx;
  line-height: 24rpx;
  background: transparent;
}

.input-action {
  font-size: 32rpx;
  color: #6b7280;
  padding: 8rpx;
  transition: all 0.2s ease;
}

.input-action:active {
  transform: scale(0.9);
}

.error-text {
  color: #dc2626;
  font-size: 28rpx;
  margin-top: 12rpx;
  margin-left: 20rpx;
}

.forgot-password {
  text-align: right;
  margin-bottom: 32rpx;
}

.forgot-password text {
  color: #2563eb;
  font-size: 28rpx;
  transition: all 0.2s ease;
}

.forgot-password text:active {
  opacity: 0.7;
}

/* 登录按钮 */
.login-btn {
  width: 100%;
  background: #2563eb;
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 32rpx 64rpx;
  font-size: 32rpx;
  font-weight: 500;
  transition: all 0.2s ease;
}

.login-btn::after {
  border: none;
}

.login-btn:active {
  background: #1d4ed8;
  transform: scale(0.98);
}

.login-btn.loading {
  background: #9ca3af;
}

/* 微信登录 */
.wechat-login {
  margin-bottom: 48rpx;
}

.wechat-content {
  text-align: center;
  padding: 40rpx 0;
}

.wechat-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
}

.wechat-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 20rpx;
}

.wechat-desc {
  font-size: 32rpx;
  color: #6b7280;
  margin-bottom: 48rpx;
}

/* 微信登录按钮 */
.wechat-btn {
  width: 100%;
  background: #07c160;
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 32rpx 64rpx;
  font-size: 32rpx;
  font-weight: 500;
  transition: all 0.2s ease;
}

.wechat-btn::after {
  border: none;
}

.wechat-btn:active {
  background: #059669;
  transform: scale(0.98);
}

.wechat-btn.loading {
  background: #9ca3af;
}

/* 注册提示 */
.register-tip {
  text-align: center;
  margin-bottom: 32rpx;
  color: #6b7280;
  font-size: 32rpx;
}

.register-link {
  color: #2563eb !important;
  font-weight: 600;
  margin-left: 8rpx;
  transition: all 0.2s ease;
}

.register-link:active {
  opacity: 0.7;
}

/* 协议提示 */
.agreement-tip {
  text-align: center;
  color: #9ca3af;
  font-size: 28rpx;
  line-height: 1.5;
}

.agreement-link {
  color: #6b7280 !important;
  text-decoration: underline;
  transition: all 0.2s ease;
}

.agreement-link:active {
  opacity: 0.7;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .main-content {
    padding: 32rpx 24rpx;
  }
  
  .page-title {
    font-size: 40rpx;
  }
  
  .input-wrapper {
    padding: 28rpx 36rpx;
    min-height: 80rpx;
  }
  
  .form-input {
    font-size: 28rpx;
  }
}