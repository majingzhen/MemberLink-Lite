/* pages/asset/index/index.wxss */

.container {
  min-height: 100vh;
  background: #f3f4f6;
  font-family: 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
  display: flex;
  flex-direction: column;
}

/* 顶部栏 */
.header {
  background: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  padding: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header-time {
  font-size: 28rpx;
  color: #6b7280;
}

.header-battery {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.battery-icon {
  font-size: 24rpx;
  color: #6b7280;
}

.battery-text {
  font-size: 24rpx;
  color: #6b7280;
}

/* 主要内容区 */
.main-content {
  flex: 1;
  padding: 48rpx 32rpx;
}

.page-title {
  font-size: 48rpx;
  font-weight: 700;
  text-align: center;
  margin-bottom: 48rpx;
  color: #1f2937;
}

/* 未登录状态 */
.not-login {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 400rpx;
}

.login-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 64rpx 48rpx;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  max-width: 500rpx;
  width: 100%;
}

.login-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
}

.login-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 16rpx;
}

.login-desc {
  font-size: 28rpx;
  color: #6b7280;
  margin-bottom: 48rpx;
  line-height: 1.5;
}

.login-btn {
  background: #2563eb;
  color: #ffffff;
  border: none;
  border-radius: 16rpx;
  padding: 32rpx 64rpx;
  font-size: 32rpx;
  font-weight: 500;
  width: 100%;
  transition: all 0.2s ease;
}

.login-btn::after {
  border: none;
}

.login-btn:active {
  background: #1d4ed8;
  transform: scale(0.98);
}

/* 资产内容 */
.asset-content {
  animation: fadeIn 0.6s ease-out;
}

/* 资产卡片网格 */
.asset-grid {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
  margin-bottom: 48rpx;
}

.asset-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.2s ease;
}

.asset-card:active {
  transform: scale(0.98);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.balance-card {
  background: #dcfce7;
  border: 2rpx solid #bbf7d0;
}

.points-card {
  background: #fef3c7;
  border: 2rpx solid #fde68a;
}

.card-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.card-info {
  flex: 1;
}

.card-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #6b7280;
  margin-bottom: 8rpx;
}

.card-value {
  font-size: 48rpx;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 8rpx;
}

.card-desc {
  font-size: 24rpx;
  color: #9ca3af;
}

.card-arrow {
  font-size: 32rpx;
  color: #6b7280;
  transition: transform 0.2s ease;
}

.asset-card:active .card-arrow {
  transform: translateX(8rpx);
}

/* 功能菜单 */
.menu-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.menu-item {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.menu-item:active {
  transform: scale(0.95);
  background: #f9fafb;
}

.menu-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.menu-icon.blue {
  background: #dbeafe;
  color: #2563eb;
}

.menu-icon.yellow {
  background: #fef3c7;
  color: #d97706;
}

.menu-icon.green {
  background: #dcfce7;
  color: #16a34a;
}

.menu-icon.red {
  background: #fee2e2;
  color: #dc2626;
}

.menu-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #374151;
}

/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 响应式适配 */
@media (max-width: 375px) {
  .main-content {
    padding: 32rpx 24rpx;
  }
  
  .page-title {
    font-size: 40rpx;
  }
  
  .asset-card {
    padding: 32rpx;
  }
  
  .card-value {
    font-size: 40rpx;
  }
  
  .menu-grid {
    grid-template-columns: 1fr;
  }
  
  .menu-item {
    padding: 24rpx;
  }
}