<!--pages/asset/index/index.wxml-->
<view class="container">
  <!-- 主要内容区 -->
  <view class="main-content">
    <!-- <view class="page-title">资产中心</view> -->
    
    <!-- 未登录状态 -->
    <view wx:if="{{!hasUserInfo}}" class="not-login">
      <view class="login-card">
        <view class="login-icon">💰</view>
        <view class="login-title">请先登录</view>
        <view class="login-desc">登录后可查看您的资产信息</view>
        <button class="login-btn" bindtap="goToLogin">
          立即登录
        </button>
      </view>
    </view>

    <!-- 已登录状态 -->
    <view wx:else class="asset-content">
      <!-- 资产卡片网格 -->
      <view class="asset-grid">
        <!-- 账户余额模块 -->
        <view class="asset-card balance-card" bindtap="onBalanceCardTap">
          <view class="card-content">
            <view class="card-info">
              <view class="card-label">账户余额</view>
              <view class="card-value">¥{{assetInfo.balance || 0}}</view>
              <view class="card-desc">点击查看余额记录</view>
            </view>
            <view class="card-arrow">→</view>
          </view>
        </view>

        <!-- 积分余额模块 -->
        <view class="asset-card points-card" bindtap="onPointsCardTap">
          <view class="card-content">
            <view class="card-info">
              <view class="card-label">积分余额</view>
              <view class="card-value">{{assetInfo.points || 0}}</view>
              <view class="card-desc">点击查看积分记录</view>
            </view>
            <view class="card-arrow">→</view>
          </view>
        </view>
      </view>

      <!-- 功能菜单 -->
      <view class="menu-grid">
        <view class="menu-item" bindtap="onQuickActionTap" data-url="/pages/asset/balance/balance">
          <view class="menu-icon blue">💱</view>
          <view class="menu-text">余额记录</view>
        </view>
        
        <view class="menu-item" bindtap="onQuickActionTap" data-url="/pages/asset/points/points">
          <view class="menu-icon yellow">⭐</view>
          <view class="menu-text">积分记录</view>
        </view>
        
        <view class="menu-item" bindtap="onQuickActionTap" data-url="">
          <view class="menu-icon green">📊</view>
          <view class="menu-text">资产统计</view>
        </view>
        
        <view class="menu-item" bindtap="onQuickActionTap" data-url="">
          <view class="menu-icon red">🎁</view>
          <view class="menu-text">签到领积分</view>
        </view>
      </view>
    </view>
  </view>
</view>