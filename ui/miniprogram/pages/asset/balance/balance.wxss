/* pages/asset/balance/balance.wxss */

.balance-container {
  min-height: 100vh;
  padding: 32rpx;
}

/* 筛选区域 */
.filter-section {
  margin-bottom: 32rpx;
}

.filter-content {
  padding: 16rpx 0;
}

.filter-item {
  margin-bottom: 24rpx;
}

.filter-item:last-child {
  margin-bottom: 0;
}

.filter-label {
  font-size: 28rpx;
  color: #606266;
  margin-bottom: 12rpx;
}

.picker-display {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: rgba(255, 255, 255, 0.8);
  border: 2rpx solid #e4e7ed;
  border-radius: 24rpx;
  padding: 24rpx 32rpx;
  font-size: 32rpx;
  color: #303133;
}

.picker-arrow {
  color: #c0c4cc;
  font-size: 32rpx;
  font-weight: bold;
  transform: rotate(90deg);
}

.filter-row {
  display: flex;
  gap: 24rpx;
}

.filter-row .filter-item {
  flex: 1;
}

.filter-actions {
  margin-top: 24rpx;
  text-align: center;
}

/* 记录列表 */
.records-section {
  flex: 1;
}

.records-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.record-item {
  animation: fadeInUp 0.3s ease-out;
}

.record-content {
  padding: 16rpx 0;
}

.record-info {
  width: 100%;
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.record-type {
  font-size: 32rpx;
  font-weight: 500;
}

.record-amount {
  font-size: 36rpx;
  font-weight: 600;
}

.record-remark {
  font-size: 28rpx;
  color: #606266;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.record-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.record-time {
  font-size: 24rpx;
  color: #909399;
}

.record-balance {
  font-size: 24rpx;
  color: #909399;
}

/* 加载状态 */
.load-more,
.no-more {
  text-align: center;
  padding: 32rpx 0;
}

.loading-text,
.load-more-text,
.no-more text {
  font-size: 28rpx;
  color: #909399;
}

/* 空状态 */
.empty-state {
  margin-top: 100rpx;
}

.empty-content {
  text-align: center;
  padding: 64rpx 32rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.6;
}

.empty-title {
  font-size: 36rpx;
  font-weight: 500;
  color: #303133;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #909399;
  line-height: 1.5;
}

/* 动画 */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 响应式适配 */
@media (max-width: 375px) {
  .balance-container {
    padding: 24rpx;
  }
  
  .filter-row {
    flex-direction: column;
    gap: 16rpx;
  }
  
  .record-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 8rpx;
  }
  
  .record-footer {
    flex-direction: column;
    align-items: flex-start;
    gap: 8rpx;
  }
}