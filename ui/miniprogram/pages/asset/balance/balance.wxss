/* pages/asset/balance/balance.wxss */

.container {
  min-height: 100vh;
  background: #f3f4f6;
  font-family: 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
  display: flex;
  flex-direction: column;
}

/* 主要内容区 */
.main-content {
  flex: 1;
  padding: 48rpx 32rpx;
}

.page-title {
  font-size: 48rpx;
  font-weight: 700;
  text-align: center;
  margin-bottom: 48rpx;
  color: #1f2937;
}

/* 筛选区域 */
.filter-section {
  margin-bottom: 32rpx;
}

.filter-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.filter-content {
  padding: 0;
}

.filter-item {
  margin-bottom: 24rpx;
}

.filter-item:last-child {
  margin-bottom: 0;
}

.filter-label {
  font-size: 28rpx;
  color: #6b7280;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.picker-display {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #f9fafb;
  border: 2rpx solid #e5e7eb;
  border-radius: 16rpx;
  padding: 24rpx 32rpx;
  font-size: 32rpx;
  color: #1f2937;
  transition: all 0.2s ease;
}

.picker-display:active {
  background: #f3f4f6;
  border-color: #2563eb;
}

.picker-arrow {
  color: #9ca3af;
  font-size: 32rpx;
  font-weight: bold;
  transform: rotate(90deg);
}

.filter-row {
  display: flex;
  gap: 24rpx;
}

.filter-row .filter-item {
  flex: 1;
}

.filter-actions {
  margin-top: 24rpx;
  text-align: center;
}

.clear-btn {
  background: #6b7280;
  color: #ffffff;
  border: none;
  border-radius: 16rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.2s ease;
}

.clear-btn::after {
  border: none;
}

.clear-btn:active {
  background: #4b5563;
  transform: scale(0.98);
}

/* 记录列表 */
.records-section {
  flex: 1;
}

.records-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.record-item {
  animation: fadeInUp 0.3s ease-out;
}

.record-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.2s ease;
}

.record-card:active {
  transform: scale(0.98);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.record-content {
  padding: 0;
}

.record-info {
  width: 100%;
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.record-type {
  font-size: 32rpx;
  font-weight: 600;
}

.record-amount {
  font-size: 36rpx;
  font-weight: 700;
}

.record-remark {
  font-size: 28rpx;
  color: #6b7280;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.record-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.record-time {
  font-size: 24rpx;
  color: #9ca3af;
}

.record-balance {
  font-size: 24rpx;
  color: #9ca3af;
}

/* 加载状态 */
.load-more,
.no-more {
  text-align: center;
  padding: 32rpx 0;
}

.loading-text,
.load-more-text,
.no-more text {
  font-size: 28rpx;
  color: #9ca3af;
}

/* 空状态 */
.empty-state {
  margin-top: 100rpx;
}

.empty-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 64rpx 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.6;
}

.empty-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #6b7280;
  line-height: 1.5;
}

/* 动画 */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 响应式适配 */
@media (max-width: 375px) {
  .main-content {
    padding: 32rpx 24rpx;
  }
  
  .page-title {
    font-size: 40rpx;
  }
  
  .filter-row {
    flex-direction: column;
    gap: 16rpx;
  }
  
  .record-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 8rpx;
  }
  
  .record-footer {
    flex-direction: column;
    align-items: flex-start;
    gap: 8rpx;
  }
}