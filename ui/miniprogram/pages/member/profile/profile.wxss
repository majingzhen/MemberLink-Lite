/* pages/member/profile/profile.wxss */

.profile-container {
  min-height: 100vh;
  padding: 40rpx;
  background: #ffffff;
}

/* 用户信息卡片 */
.user-card {
  margin-bottom: 48rpx;
}

.user-header {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.avatar-section {
  position: relative;
  margin-right: 32rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
}

.avatar-edit {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  background: var(--primary-color);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: white;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 40rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

.user-meta {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.user-meta text {
  font-size: 28rpx;
  color: var(--text-secondary);
}

.user-id {
  font-weight: 500;
}

/* 用户统计 */
.user-stats {
  display: flex;
  align-items: center;
  gap: 48rpx;
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 28rpx;
  color: var(--text-secondary);
}

/* 未登录状态 */
.not-login {
  text-align: center;
  padding: 80rpx 40rpx;
}

.login-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
}

.login-title {
  font-size: 40rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

.login-desc {
  font-size: 32rpx;
  color: var(--text-secondary);
  margin-bottom: 48rpx;
}

.login-button {
  width: 100%;
  background: var(--primary-color);
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 32rpx;
  font-size: 36rpx;
  font-weight: 500;
  min-height: 88rpx;
  line-height: 24rpx;
  transition: all 0.3s ease;
}

.login-button::after {
  border: none;
}

.login-button:active {
  transform: scale(0.98);
  opacity: 0.9;
}

/* 功能菜单 */
.menu-section {
  margin-bottom: 48rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 24rpx;
  padding-left: 16rpx;
  border-left: 8rpx solid var(--primary-color);
}

.menu-list {
  background: #f8f9fa;
  border-radius: 16rpx;
  overflow: hidden;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx 40rpx;
  border-bottom: 1rpx solid #ecf0f1;
  transition: all 0.3s ease;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: #ecf0f1;
  transform: scale(0.98);
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 24rpx;
  width: 48rpx;
  text-align: center;
}

.menu-content {
  flex: 1;
}

.menu-title {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.menu-desc {
  font-size: 28rpx;
  color: var(--text-secondary);
}

.menu-arrow {
  font-size: 32rpx;
  color: var(--text-light);
  font-weight: 600;
}

/* 退出登录 */
.logout-section {
  margin-top: 48rpx;
}

.logout-button {
  width: 100%;
  background: var(--danger-color);
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 32rpx;
  font-size: 36rpx;
  font-weight: 500;
  min-height: 88rpx;
  line-height: 24rpx;
  transition: all 0.3s ease;
}

.logout-button::after {
  border: none;
}

.logout-button:active {
  transform: scale(0.98);
  opacity: 0.9;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .profile-container {
    padding: 32rpx;
  }
  
  .user-avatar {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50rpx;
  }
  
  .user-name {
    font-size: 36rpx;
  }
  
  .menu-item {
    padding: 28rpx 32rpx;
  }
  
  .menu-title {
    font-size: 30rpx;
  }
}