/* pages/member/profile/profile.wxss */

.profile-container {
  min-height: 100vh;
  padding: 32rpx;
}

/* 未登录状态 */
.not-login {
  margin-top: 200rpx;
}

.not-login-content {
  text-align: center;
  padding: 48rpx 32rpx;
}

.login-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.8;
}

.login-title {
  font-size: 36rpx;
  font-weight: 500;
  color: #303133;
  margin-bottom: 16rpx;
}

.login-desc {
  font-size: 28rpx;
  color: #606266;
  margin-bottom: 48rpx;
  line-height: 1.5;
}

/* 用户信息卡片 */
.user-card {
  margin-bottom: 32rpx;
}

.user-info {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
}

/* 头像区域 */
.avatar-section {
  position: relative;
  margin-right: 32rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.8);
}

.avatar-edit {
  position: absolute;
  bottom: -8rpx;
  right: -8rpx;
  width: 48rpx;
  height: 48rpx;
  background: #667eea;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  border: 4rpx solid white;
}

/* 用户详情 */
.user-details {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #303133;
  margin-bottom: 12rpx;
}

.user-meta {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  margin-bottom: 24rpx;
}

.user-meta text {
  font-size: 24rpx;
  color: #606266;
}

/* 用户统计 */
.user-stats {
  display: flex;
  align-items: center;
}

.stat-item {
  text-align: center;
}

.stat-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #303133;
  margin-bottom: 4rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #909399;
}

.stat-divider {
  width: 2rpx;
  height: 48rpx;
  background: rgba(255, 255, 255, 0.5);
  margin: 0 32rpx;
}

/* 功能菜单 */
.menu-section {
  margin-bottom: 48rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #303133;
  margin-bottom: 24rpx;
  padding-left: 16rpx;
  border-left: 8rpx solid #667eea;
}

.menu-list {
  padding: 0;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx 0;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: rgba(102, 126, 234, 0.05);
  transform: scale(0.98);
}

.menu-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
  width: 64rpx;
  text-align: center;
}

.menu-content {
  flex: 1;
}

.menu-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #303133;
  margin-bottom: 8rpx;
}

.menu-desc {
  font-size: 24rpx;
  color: #909399;
}

.menu-arrow {
  font-size: 32rpx;
  color: #c0c4cc;
  font-weight: bold;
  transform: rotate(0deg);
  transition: transform 0.3s ease;
}

.menu-item:active .menu-arrow {
  transform: rotate(90deg);
}

/* 退出登录 */
.logout-section {
  margin-top: 48rpx;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .profile-container {
    padding: 24rpx;
  }
  
  .user-info {
    flex-direction: column;
    text-align: center;
  }
  
  .avatar-section {
    margin-right: 0;
    margin-bottom: 24rpx;
  }
  
  .user-stats {
    justify-content: center;
  }
  
  .menu-item {
    padding: 24rpx 0;
  }
  
  .menu-icon {
    font-size: 40rpx;
    margin-right: 16rpx;
  }
}