/* pages/member/profile/profile.wxss */

.container {
  min-height: 100vh;
  background: #f3f4f6;
  font-family: 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
  display: flex;
  flex-direction: column;
}

/* 主要内容区 */
.main-content {
  flex: 1;
  padding: 48rpx 32rpx;
}

.page-title {
  font-size: 48rpx;
  font-weight: 700;
  text-align: center;
  margin-bottom: 48rpx;
  color: #1f2937;
}

/* 未登录状态 */
.not-login {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 400rpx;
}

.login-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 64rpx 48rpx;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  max-width: 500rpx;
  width: 100%;
}

.login-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
}

.login-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 16rpx;
}

.login-desc {
  font-size: 28rpx;
  color: #6b7280;
  margin-bottom: 48rpx;
  line-height: 1.5;
}

.login-btn {
  background: #2563eb;
  color: #ffffff;
  border: none;
  border-radius: 16rpx;
  padding: 32rpx 64rpx;
  font-size: 32rpx;
  font-weight: 500;
  width: 100%;
  transition: all 0.2s ease;
}

.login-btn::after {
  border: none;
}

.login-btn:active {
  background: #1d4ed8;
  transform: scale(0.98);
}

/* 个人中心内容 */
.profile-content {
  animation: fadeIn 0.6s ease-out;
}

/* 用户信息卡片 */
.user-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 48rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.user-info-section {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 24rpx;
  object-fit: cover;
}

.user-details {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 8rpx;
}

.user-subtitle {
  font-size: 28rpx;
  color: #6b7280;
}

.user-stats {
  display: flex;
  justify-content: space-around;
  text-align: center;
}

.stat-item {
  flex: 1;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.stat-value.balance {
  color: #2563eb;
}

.stat-value.points {
  color: #f97316;
}

.stat-value.status {
  color: #16a34a;
}

.stat-label {
  font-size: 28rpx;
  color: #6b7280;
}

/* 菜单区域 */
.menu-section {
  margin-bottom: 48rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 24rpx;
  padding-left: 16rpx;
  border-left: 8rpx solid #2563eb;
}

.menu-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.menu-item {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
  gap: 24rpx;
  transition: all 0.2s ease;
}

.menu-item:active {
  transform: scale(0.98);
  background: #f9fafb;
}

.menu-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  font-size: 32rpx;
}

.menu-icon.blue {
  background: #dbeafe;
  color: #2563eb;
}

.menu-icon.orange {
  background: #fed7aa;
  color: #f97316;
}

.menu-icon.green {
  background: #dcfce7;
  color: #16a34a;
}

.menu-icon.purple {
  background: #e9d5ff;
  color: #9333ea;
}

.menu-icon.yellow {
  background: #fef3c7;
  color: #d97706;
}

.menu-icon.gray {
  background: #f3f4f6;
  color: #6b7280;
}

.menu-content {
  flex: 1;
}

.menu-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 8rpx;
}

.menu-desc {
  font-size: 24rpx;
  color: #6b7280;
}

/* 退出登录 */
.logout-section {
  margin-top: 48rpx;
}

.logout-btn {
  width: 100%;
  background: #dc2626;
  color: #ffffff;
  border: none;
  border-radius: 16rpx;
  padding: 32rpx 64rpx;
  font-size: 32rpx;
  font-weight: 500;
  transition: all 0.2s ease;
}

.logout-btn::after {
  border: none;
}

.logout-btn:active {
  background: #b91c1c;
  transform: scale(0.98);
}

/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 响应式适配 */
@media (max-width: 375px) {
  .main-content {
    padding: 32rpx 24rpx;
  }
  
  .page-title {
    font-size: 40rpx;
  }
  
  .user-avatar {
    width: 64rpx;
    height: 64rpx;
    border-radius: 32rpx;
  }
  
  .menu-grid {
    grid-template-columns: 1fr;
  }
  
  .menu-item {
    padding: 24rpx;
  }
}