/* pages/member/password/password.wxss */

.password-container {
  min-height: 100vh;
  padding: 32rpx;
}

.password-content {
  margin-bottom: 48rpx;
}

/* 表单区域 */
.form-section {
  padding: 16rpx 0;
}

/* 密码输入框包装器 */
.password-input-wrapper {
  position: relative;
  display: flex;
  align-items: center;
}

.password-input {
  flex: 1;
  padding-right: 80rpx !important;
}

.password-toggle {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  padding: 8rpx;
  font-size: 32rpx;
  color: #909399;
  z-index: 1;
}

/* 操作按钮 */
.action-buttons {
  margin-top: 48rpx;
}

/* 安全提示 */
.security-tips {
  margin-top: 32rpx;
}

.tips-content {
  padding: 24rpx 0;
}

.tips-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #303133;
  margin-bottom: 16rpx;
}

.tips-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.tips-list text {
  font-size: 24rpx;
  color: #606266;
  line-height: 1.5;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .password-container {
    padding: 24rpx;
  }
  
  .action-buttons {
    margin-top: 32rpx;
  }
  
  .password-toggle {
    right: 16rpx;
    font-size: 28rpx;
  }
}